{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@clients": ["src/clients"],
      "@clients/*": ["src/clients/*"],
      
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      
      "@modules/*": ["src/modules/*"],
      
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      
      "@auth": ["src/auth"],
      "@auth/*": ["src/auth/*"],
      
      "@errors": ["src/errors"],
      "@errors/*": ["src/errors/*"],

      "@decorators": ["src/decorators"],
      "@decorators/*": ["src/decorators/*"],
      
      "@athlete/*": ["src/athlete/*"],
      "@common/*": ["src/common/*"],
      "@core/*": ["src/core/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "resolveJsonModule": true,
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    
    "module": "CommonJS",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
  }
}